{% extends 'base.html.twig' %}

{% block title %}Character{% endblock %}

{% block body %}
    <h1>Character</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ character.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ character.name }}</td>
            </tr>
            <tr>
                <th>Job</th>
                <td>{{ character.job }}</td>
            </tr>
            <tr>
                <th>Life</th>
                <td>{{ character.life }}</td>
            </tr>
            <tr>
                <th>Attack</th>
                <td>{{ character.attack }}</td>
            </tr>
            <tr>
                <th>Def</th>
                <td>{{ character.def }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_character_index') }}">back to list</a>

    <a href="{{ path('app_character_edit', {'id': character.id}) }}">edit</a>

    {{ include('character/_delete_form.html.twig') }}
{% endblock %}
